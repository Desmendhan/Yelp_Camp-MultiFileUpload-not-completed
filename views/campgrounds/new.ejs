<% include ../partials/header %>

<div class="container">
    <h1 class="add">Create a New Campground</h1>
    <div class="row">
        <div class="newForm">   
        <form method="post" action="/campgrounds" enctype="multipart/form-data">
            <div class="form-group">
                <label for="name">Name</label>
                <input class="form-control" type="campground[text]" name="name" placeholder = "Name">
            </div>
            <div class="form-group">
                <label for="image">Image</label>
                <input type="file" id="image" name="campground[image]" accept="image/*" multiple required>
            </div>
            <div class="form-group">
                <label for="video">Video</label>
                <input class="form-control" type="text" name="campground[video]" placeholder = "Video url">
            </div>
            <div class="form-group">
                <label for="location">Location</label>
                <input class="form-control" type="text" name="campground[location]" id="location" placeholder="Your Locaiton">
            </div>
            <div class="form-group">
                <label for="price">Price</label>
                <input class="form-control" type="number" name="campground[price]" placeholder = "Price" in="0.01" step="0.01">
            </div>
            <div class="form-group">
                <label for="description">Description</label>
                <input class="form-control" type="text" name="campground[description]" placeholder = "Description">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>
            <a href = "/campgrounds">Go Back</a>
        </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>
